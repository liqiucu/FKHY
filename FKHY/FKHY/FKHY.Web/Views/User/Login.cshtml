<body>
    <script type="text/javascript">
        $(function () {
            $(".aa .tab a").click(function () {
                $(this).addClass('on').siblings().removeClass('on');
                var index = $(this).index();
                number = index;
                $('.aa .tab_con .rsp').hide();
                $('.aa .tab_con .rsp:eq(' + index + ')').show();
            });

            var auto = 2; //等于1则自动切换，其他任意数字则不自动切换
            if (auto == 1) {
                var number = 0;
                var maxNumber = $('.aa .tab a').length;

                function autotab() {
                    number++;
                    number == maxNumber ? number = 0 : number;
                    $('.aa .tab a:eq(' + number + ')').addClass('on').siblings().removeClass('on');
                    $('.aa .tab_con .rsp:eq(' + number + ')').show().siblings().hide();
                }
                var tabChange = setInterval(autotab, 3000);
                //鼠标悬停暂停切换
                $('.aa').mouseover(function () {
                    clearInterval(tabChange);
                });
                $('.aa').mouseout(function () {
                    tabChange = setInterval(autotab, 3000);
                });
            }
        });

        function dlLogin() {
            var phone = $("#lphone").val();
            if (phone=="") {
                alertWarning("请输入手机号");
                return;
            }
            var password = $("#lpassword").val();
            if (password == "") {
                alertWarning("请输入密码");
                return;
            }

            var data = {
                Phone: $('#lphone').val(),
                Password: $('#lpassword').val(),
                rememberMe: false
            };

            $.ajaxPost('/base/userlogin', data, function (result) {
                if (result.status == 1) {
                    alertSuccess("登录成功!");
                    window.location.href = '/';
                }
                else if (result.status == 2) {
                    alertWarning("账号密码错误!");
                }
                else if (result.status == 0) {
                    location.reload();
                }
            });
        }
    </script>
    <div class="login">
        <div class="reg">
            <img src="~/images/da-logo.png" style="margin-top: 80px;" />
            <div class="logo_tp">
                <div class="aa">
                    <div class="tab">
                        <a href="javascript:;" class="on">账号登录</a>
